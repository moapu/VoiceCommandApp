<Window x:Class="HouseFinaceCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HouseFinaceCalculator"
        mc:Ignorable="d"
          Title="House Finace Calculator" Height="556.389" Width="829.032">
    <Grid Margin="0,0,3.4,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Calculate" Grid.Column="1" Content="CALCULATE" Click="buttonCal_CLick" HorizontalAlignment="Left" Margin="19.2,285,0,0" VerticalAlignment="Top" Width="157" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.677"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="textBoxDisplay" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="18.2,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxDisplay1" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="17.2,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxDisplay2" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="17.6,378,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.256"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="textBoxDisplay3" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="17.6,446,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.256"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBlock x:Name="textBlock" Grid.Column="1"  HorizontalAlignment="Left" Margin="18.2,63,0,0" TextWrapping="Wrap" Text="Purchase Value:" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy" Grid.Column="1" HorizontalAlignment="Left" Margin="17.2,180,0,0" TextWrapping="Wrap" Text="Percentage of Pay:" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy1" Grid.Column="1" HorizontalAlignment="Left" Margin="17.6,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FontWeight="Bold" Text="Total Down-Payment:"/></TextBlock>
        <TextBlock x:Name="textBlock_Copy2" Grid.Column="1" HorizontalAlignment="Left" Margin="17.6,428,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FontWeight="Bold" Text="Leftover Payment:"/></TextBlock>
        <TextBlock x:Name="textBlock1" Grid.Column="1" HorizontalAlignment="Left" Margin="17.6,18,0,0" TextWrapping="Wrap" Text="Down-Payment " VerticalAlignment="Top" Width="278" TextAlignment="Center" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
